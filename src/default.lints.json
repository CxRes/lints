{
    "jslint": {
        "files": [
            "**/*.js",
            "**/*.json",
            "**/.*.json"
        ],
        "ignore": [
            "node_modules/**",
            "**/*.min.js"
        ],
        "rcFile": ".jslintrc"
    },
    "jshint": {
        "files": [
            "**/*.js",
            "**/*.json",
            "**/.*.json"
        ],
        "ignore": [
            "node_modules/**",
            "**/*.min.js"
        ],
        "rcFile": ".jshintrc"
    },
    "eslint": {
        "files": [
            "**/*.js"
        ],
        "ignore": [
            "node_modules/**",
            "**/*.min.js"
        ],
        "rcFile": ".eslintrc"
    },
    "csslint": {
        "files": [
            "**/*.css"
        ],
        "ignore": [
            "node_modules/**",
            "**/*.min.css"
        ],
        "rcFile": ".csslintrc"
    },
    "stylelint": {
        "files": [
            "**/*.css",
            "**/*.scss",
            "**/*.less",
            "**/*.sss"
        ],
        "ignore": [
            "node_modules/**",
            "**/*.min.css"
        ],
        "rcFile": ".stylelintrc"
    },
    "htmlhint": {
        "files": [
            "**/*.html",
            "**/*.htm"
        ],
        "ignore": [
            "node_modules/**"
        ],
        "rcFile": ".htmlhintrc"
    },
    "w3cjs": {
        "files": [
            "**/*.html",
            "**/*.htm"
        ],
        "ignore": [
            "node_modules/**"
        ],
        "rcFile": null
    }
}
