            "node_modules/**",
            "bower_components/**",
            "jspm_packages/**",
            ".npm/**",

            "lib-cov/**",
            "coverage/**",
            ".nyc_output/**",

            "**/*.min.js",
            "**/*.min.css",

            "test/stubs/bad.js"
        ]
