{
    "global": {
        "ignore": [
            "node_modules/**",
            "bower_components/**",
            "jspm_packages/**",
            ".npm/**",

            "lib-cov/**",
            "coverage/**",
            ".nyc_output/**",

            "**/*.min.js",
            "**/*.min.css",

            "test/stubs/bad.js"
        ]
    },

    "../src/linters/jslint": {
        "files": [
            "**/*.js",
            "**/*.json",
            "**/.*.json",
            "**/*.yaml",
            "**/.*.yaml",
            "**/*.yml",
            "**/.*.yml"
        ],
        "ignore": [],
        "rcFile": ".jslintrc"
    },

    "../src/linters/csslint": {
        "files": [
            "**/*.css"
        ],
        "ignore": [],
        "rcFile": ".csslintrc"
    },

    "../src/linters/htmlhint": {
        "files": [
            "**/*.html",
            "**/*.htm"
        ],
        "ignore": [],
        "rcFile": ".htmlhintrc"
    },

    "../src/linters/w3cjs": {
        "files": [
            "**/*.html",
            "**/*.htm"
        ],
        "ignore": [],
        "rcFile": null
    },

    "../src/linters/bootlint": {
        "files": [
            "**/*.html",
            "**/*.htm"
        ],
        "ignore": [],
        "rcFile": ".bootlintrc.json"
    }
}
