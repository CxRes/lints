{
    "jslint": {
        "files": [
            "**/*.js",
            "**/*.json",
            "**/.*.json",
            "**/*.yaml",
            "**/.*.yaml",
            "**/*.yml",
            "**/.*.yml"
        ],
        "ignore": [
            "node_modules/**",
            "**/*.min.js"
        ],
        "rcFile": ".jslintrc"
    },
    "eslint": {
        "files": [
            "**/*.js"
        ],
        "ignore": [
            "node_modules/**",
            "**/*.min.js"
        ],
        "rcFile": ".eslintrc.json"
    },
    "csslint": {
        "files": [
            "**/*.css"
        ],
        "ignore": [
            "node_modules/**",
            "**/*.min.css"
        ],
        "rcFile": ".csslintrc"
    },
    "stylelint": {
        "files": [
            "**/*.css",
            "**/*.scss",
            "**/*.less",
            "**/*.sss"
        ],
        "ignore": [
            "node_modules/**",
            "**/*.min.css"
        ],
        "rcFile": ".stylelintrc"
    },
    "htmlhint": {
        "files": [
            "**/*.html",
            "**/*.htm"
        ],
        "ignore": [
            "node_modules/**"
        ],
        "rcFile": ".htmlhintrc"
    },
    "w3cjs": {
        "files": [
            "**/*.html",
            "**/*.htm"
        ],
        "ignore": [
            "node_modules/**"
        ],
        "rcFile": null
    },
    "bootlint": {
        "files": [
            "**/*.html",
            "**/*.htm"
        ],
        "ignore": [
            "node_modules/**"
        ],
        "rcFile": ".bootlintrc.json"
    },
    "markdownlint": {
        "files": [
            "**/*.markdown",
            "**/*.mdown",
            "**/*.mkdn",
            "**/*.md",
            "**/*.mkd",
            "**/*.mdwn",
            "**/*.mdtxt",
            "**/*.mdtext",
            "**/*.rmd"
        ],
        "ignore": [
            "node_modules/**"
        ],
        "rcFile": ".markdownlint.json"
    },
    "remark-lint": {
        "files": [
            "**/*.markdown",
            "**/*.mdown",
            "**/*.mkdn",
            "**/*.md",
            "**/*.mkd",
            "**/*.mdwn",
            "**/*.mdtxt",
            "**/*.mdtext",
            "**/*.rmd"
        ],
        "ignore": [
            "node_modules/**"
        ],
        "rcFile": ".remarkrc"
    }
}
