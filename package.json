{
    "name": "lints",
    "version": "12.0.0",
    "description": "Lint all your JavaScript, CSS, HTML and Markdown with a single command",
    "keywords": [
        "lint",
        "linter",
        "static code analysis",
        "analysis",
        "analyser",
        "checker",
        "validation",
        "validator",
        "jslint",
        "jshint",
        "eslint",
        "csslint",
        "stylelint",
        "htmlhint",
        "w3cjs",
        "bootlint",
        "markdownlint",
        "remark-lint",
        "w3c",
        "javascript",
        "js",
        "css",
        "html",
        "markdown"
    ],
    "scripts": {
        "lint": "./bin/lints",
        "pretest": "npm run lint",
        "test": "tap 'test/*.js' 'test/linters/**/*.js' --cov --jobs=4",
        "posttest": "tap --coverage-report=text-summary && tap --coverage-report=html",
        "tap": "tap"
    },
    "bin": {
        "lints": "./bin/lints"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EvgenyOrekhov/lints.git"
    },
    "author": {
        "name": "Evgeny Orekhov",
        "url": "https://plus.google.com/+ЕвгенийОрехов"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/EvgenyOrekhov/lints/issues"
    },
    "homepage": "https://github.com/EvgenyOrekhov/lints#readme",
    "dependencies": {
        "bluebird": "^3.5.0",
        "bootlint": "^0.14.2",
        "chalk": "^1.1.3",
        "csslint": "^1.0.5",
        "eslint": "^4.1.1",
        "globby": "^6.1.0",
        "htmlhint": "^0.9.13",
        "jshint": "^2.9.5",
        "jslinter": "^1.5.20",
        "markdownlint": "^0.5.0",
        "ramda": "^0.24.1",
        "remark": "^7.0.1",
        "remark-lint": "^6.0.0",
        "remark-preset-lint-consistent": "^2.0.0",
        "remark-preset-lint-recommended": "^2.0.0",
        "stylelint": "^7.11.1",
        "stylelint-config-standard": "^16.0.0",
        "w3cjs": "^0.4.0",
        "wordwrap": "^1.0.0"
    },
    "files": [
        "bin/",
        "src/"
    ],
    "devDependencies": {
        "ansi-styles": "^3.1.0",
        "eslint-config-hardcore-fp": "^1.2.0",
        "eslint-plugin-promise": "^3.5.0",
        "nock": "^9.0.13",
        "tap": "^10.7.0"
    }
}
